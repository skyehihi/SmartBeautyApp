@model SmartBeauty.Pages.Appointment.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].ShowUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Salon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].TimeSpot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShowUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salon.SalonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.StaffID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ClientID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSpot.TimeSpotID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AppointmentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AppointmentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AppointmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
